{
  "version": 2,
  "buildCommand": "npm run build:client",
  "outputDirectory": "dist/public",
  "functions": {
    "api/**/*.ts": {
      "includeFiles": "lib/**,shared/**",
      "maxDuration": 30
    }
  },
  "rewrites": [
    {
      "source": "/assets/(.*)",
      "destination": "/assets/$1"
    },
    {
      "source": "(?!/api)(.*)",
      "destination": "/index.html"
    }
  ]
}

