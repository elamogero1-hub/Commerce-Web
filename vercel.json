{
  "version": 2,
  "buildCommand": "npm run build:client",
  "outputDirectory": "dist/public",
  "functions": {
    "api/**/*.ts": {
      "includeFiles": "lib/**,shared/**",
      "maxDuration": 30
    }
  },
  "routes": [
    {
      "src": "/api/health",
      "dest": "/api/health"
    },
    {
      "src": "/api/products/([^/]+)",
      "dest": "/api/products/[id]"
    },
    {
      "src": "/api/products",
      "dest": "/api/products"
    },
    {
      "src": "/api/categories",
      "dest": "/api/categories"
    },
    {
      "src": "/api/cart/([^/]+)",
      "dest": "/api/cart/[clientId]"
    },
    {
      "src": "/assets/(.*)",
      "dest": "/assets/$1"
    },
    {
      "src": "/(.*)",
      "dest": "/index.html",
      "status": 200
    }
  ],
  "env": {
    "NODE_ENV": "production"
  }
}

